@model ExamDev.Infra.Authen


<div class="container">
    <form method="post" asp-controller="Authen" asp-action="Edit">
        <div class="card col-md-12 justify-content-md-center p-3">
        <div class="mb-4">
            <h3>Authen Edit</h3>
        </div>
        <div class="mb-3">
            <label asp-for="AuthenName"></label>
            <input asp-for="AuthenName" type="text" class="form-control "/>
            <span asp-validation-for="AuthenName" class="text-danger"></span>
        </div>
        <div class="mb-2">
                    <label asp-for="Status"></label>
                    <div class="form-group d-flex">

                        <div class="form-check pe-2">
                        @{
                            string status0 = Model.Status ? "checked" : "";
                            string status1 = Model.Status ? "" : "checked";
                        }
                            <input name="Status" class="form-check-input" type="radio" value="true" @status0>
                            <label class="form-check-label" for="status0">
                                เปิดใช้งาน
                            </label>
                        </div>
                        <div class="form-check">
                            <input name="Status" class="form-check-input" type="radio" value="false" @status1>
                            <label class="form-check-label" for="status1">
                                ปิดใช้งาน
                            </label>
                        </div>
                    </div>
                </div>
        <div class="d-flex">
            <a asp-action="Index" class="btn btn-secondary me-2">Back</a>
            <button type ="submit"class="btn btn-success">Update</button>
        </div>
    </div>
    </form>
</div>
