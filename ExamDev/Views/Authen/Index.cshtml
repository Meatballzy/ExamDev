@model IEnumerable<Authen>

<div class="container mt-3">
    <div>
        <div class="d-flex justify-content-between mb-3">
            <h3>Authen</h3>
            <a asp-controller="Authen" asp-action="Create" class="btn btn-success fs-5">Create</a>
        </div>

        <div>
            <table id="authenList" class="table table-striped nowrap" style="width:100%">
            <thead>
                    <tr>
                        <th width="15%">No</th>
                        <th width="25%">Authen</th>
                        <th width="25%">Status</th>
                        <th width="15%">Options</th>
                    </tr>
                 </thead>
                 <tbody>
                    @foreach (var Aut in Model)
                    {
                        <tr>
                            <td>@Aut.Id</td>
                            <td>@Aut.AuthenName</td>
                            <td>
                                @if (Aut.Status == true)
                                {
                                    <span class="badge bg-success">Enable</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Disable</span>
                                }
                             </td>
                             <td><a asp-controller="Authen" asp-action="Edit" asp-route-id="@Aut.Id" class="btn btn-warning">Edit</a></td>
                         </tr>
                    }
                </tbody>   
        </table>
       </div>
    </div>
</div>
@section Scripts {
             <script src="~/js/authen.js"></script>
 }