@model ExamDev.Infra.User
<div class="container mt-4">
    <form method="post" asp-controller="User" asp-action="Edit">
    <h4>Create User</h4>
    <div class="card p-4 mt-3">
        <div class="row g-3">
            <div class="col-sm-12">
              <label asp-for="FullName" class="form-label">Full name</label>
              <input asp-for="FullName" type="text" class="form-control" id="fullName">
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>

            <div class="col-12">
              <label asp-for="Username" class="form-label">Username</label>
              <div class="input-group has-validation">
                <input asp-for="Username" type="text" class="form-control" id="username" placeholder="Username" required>
              <div class="invalid-feedback">
                  Your username is required.
                </div>
              </div>
            </div>

            <div class="col-12">
              <label asp-for="Password" class="form-label">Password</label>
              <div class="input-group has-validation">
                <input asp-for="Password" type="text" class="form-control" id="password" placeholder="password" required>
              <div class="invalid-feedback">
                  Your password is required.
                </div>
              </div>
            </div>

           <div class="form-floating py-2 col-12">

                <select asp-for="AuthenId" class="form-select border-0 shadow">
                <option disabled selected>--Select Category</option>
                        @foreach (var item in ViewBag.AuthenList)
                        {
                        <option value="@item.Id">@item.AuthenName</option>
                        }
                </select>

              <label asp-for="AuthenId" class="ms-2"></label>
              <span asp-validation-for="AuthenId" class="text-danger"></span>

            </div>

            <div class="mb-2">
                    <label asp-for="Status"></label>
                    <div class="form-group d-flex">

                        <div class="form-check pe-2">
                            @{
                                string status0 = Model.Status ? "checked" : "";
                                string status1 = Model.Status ? "" : "checked";
                            }
                            <input name="Status" class="form-check-input" type="radio" value="true" @status0>
                            <label class="form-check-label" for="status0">
                                เปิดใช้งาน
                            </label>
                        </div>
                        <div class="form-check">
                            <input name="Status" class="form-check-input" type="radio" value="false" @status1>
                            <label class="form-check-label" for="status1">
                                ปิดใช้งาน
                            </label>
                        </div>
                    </div>
                </div>

            <div class="d-flex mt-5">
                <a asp-action="Index" class="btn btn-secondary me-2">Back</a>
                <button type ="submit"class="btn btn-success">Update</button>
            </div>
          </div>
          </div>
           </form>
</div>